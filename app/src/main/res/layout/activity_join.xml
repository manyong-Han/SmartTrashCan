<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원 가입"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold"

            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:hint="아이디 입력"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffff" />
        <Button
            android:id="@+id/id_chack"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="중복 확인"
            android:textColor="@color/colorPrimary"
            android:background="#ffffff"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_no_encryption_black_24dp"
        android:drawableStart="@drawable/ic_no_encryption_black_24dp"
        android:hint="패스워드 입력"
        android:inputType="textPassword"
        android:padding="10dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/password2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_no_encryption_black_24dp"
            android:drawableStart="@drawable/ic_no_encryption_black_24dp"
            android:hint="패스워드 재입력"
            android:inputType="textPassword"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffff" />

        <ImageView
            android:id="@+id/Image_chack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>


    <EditText
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_face_black_24dp"
        android:drawableStart="@drawable/ic_face_black_24dp"
        android:hint="이름"
        android:padding="10dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/address"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_domain_black_24dp"
        android:drawableStart="@drawable/ic_domain_black_24dp"
        android:hint="주소"
        android:padding="10dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/last_join"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="회원가입"
        android:textColorHint="#ffffff"
        android:textColor="#ffffffff"/>

    <ImageView
        android:id="@+id/bottomlogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:paddingTop="70dp"
        android:src="@drawable/botm" />

</LinearLayout>